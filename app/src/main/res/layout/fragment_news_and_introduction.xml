<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".fragments.NewsAndIntroduction">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="top"
        android:gravity="center"
        android:weightSum="3"
        >
        <TextView
            android:id="@+id/madical_file"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="2dp"
            android:text="ملف\nالصحي"
            android:textSize="18sp"
            android:textColor="#fff"
            android:textStyle="normal"
            android:background="@drawable/news_bg"
            android:gravity="center"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/emails"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="2dp"
            android:text="البرايد\nالوارد"
            android:textSize="18sp"
            android:textColor="#fff"
            android:textStyle="normal"
            android:background="@drawable/courses_bg"
            android:gravity="center"
            android:layout_weight="1"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="10dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="الأخبار\nو تعليمات"
                android:textSize="18sp"
                android:textColor="#fff"
                android:textStyle="normal"
                android:background="@drawable/drug_bg"
                android:gravity="center"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="9dp"
                android:layout_marginRight="8dp"
                android:src="#ffff00"
                />
        </RelativeLayout>


    </LinearLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#7f8fa9"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="يجب الاهتمام بأخذ كمية كبيرة من السوائل"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:textStyle="normal"
        android:textColor="#000"
        android:textSize="18sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#7f8fa9"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="الالتزام بارتداء القناع الطبي يقيك من العدوى"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:textStyle="normal"
        android:textColor="#000"
        android:textSize="18sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#7f8fa9"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="درجة الحرارة اليوم 43 يرجى على كبار السن والحالات الحرجة تأخير موعد رمى الجمرات لما بعد العصر"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:textStyle="normal"
        android:textColor="#000"
        android:textSize="18sp"></TextView>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#7f8fa9"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="صحن الطواف ممتلئ يرجى الصعود للأدوار العلوية"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:textStyle="normal"
        android:textColor="#000"
        android:textSize="18sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#7f8fa9"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="في حال وجود اى طوارئ طبية يرجى الاتصال ب رقم 997"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:textStyle="normal"
        android:textColor="#000"
        android:textSize="18sp"
        />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/call_icon"
        />

</LinearLayout>